<Page
    x:Class="ToolVip.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ToolVip.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" xmlns:models="clr-namespace:ToolVip.Models" xmlns:help="clr-namespace:ToolVip.Helpers"
    Title="DashboardPage"
    d:DataContext="{d:DesignInstance local:DashboardPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="650"
    d:DesignWidth="500"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0"
                BorderBrush="LightGray"
                BorderThickness="0,0,0,2">
            <StackPanel Orientation="Horizontal">
                <ui:Button Width="Auto" 
                           Foreground="Orange"
                           Icon="{ui:SymbolIcon Symbol=Folder24, FontSize=30, Filled=True}"
                           CornerRadius="10"
                           MouseOverBackground="LightBlue"
                           IsEnabled="{Binding ViewModel.IsBusy, Converter={x:Static help:BooleanToConverter.Instance}}"
                           Margin="20,0,0,0"/>
                
                <ui:Button Width="Auto" 
                           Command="{Binding ViewModel.PlayCommand}"
                           Foreground="Green"
                           CornerRadius="10"
                           MouseOverBackground="LightBlue"
                           IsEnabled="{Binding ViewModel.IsRecording, Converter={x:Static help:BooleanToConverter.Instance}}"
                           Margin="20,0,0,0">
                    <ui:Button.Icon>
                        <ui:SymbolIcon Symbol="{Binding ViewModel.IsPlaying, Converter={x:Static help:PlayIconConverter.Instance}}" 
                                       FontSize="30"
                                       Filled="True"/>
                    </ui:Button.Icon>
                </ui:Button>
                <ui:Button Width="Auto" 
                           Foreground="Red"
                           Command="{Binding ViewModel.RecordAsyncCommand}"
                           CornerRadius="10"
                           MouseOverBackground="LightBlue"
                           IsEnabled="{Binding ViewModel.IsPlaying, Converter={x:Static help:BooleanToConverter.Instance}}"
                           Margin="20,0,0,0">
                    <ui:Button.Icon>
                        <ui:SymbolIcon Symbol="{Binding ViewModel.IsRecording, Converter={x:Static help:RecordIconConverter.Instance}}" FontSize="30"/>
                    </ui:Button.Icon>
                </ui:Button>
                <ui:TextBlock Text="Đang ghi"
                              VerticalAlignment="Center" 
                              Foreground="Red"
                              Margin="10,0,50,0"
                              Visibility="{Binding ViewModel.IsRecording, Converter={x:Static help:BooleanToVisibilityConverter.Instance}}"/>
                <ui:TextBox Text="{Binding ViewModel.LoopCount, UpdateSourceTrigger=PropertyChanged}" 
                            
                            HorizontalAlignment="Right"
                            Height="30"
                            IsEnabled="{Binding ViewModel.IsBusy, Converter={x:Static help:BooleanToConverter.Instance}}"/>
            </StackPanel>
        </Border>
        <ui:ListView Grid.Row="1" 
                     d:ItemsSource="{d:SampleData ItemCount=5}"
                     ItemsSource="{Binding ViewModel.Profiles}" 
                     SelectedItem="{Binding ViewModel.SelectedProfile, Mode=TwoWay}"
                     SelectionMode="Single"
                     x:Name="DriverListView"
                     >
            <ui:ListView.ItemTemplate>
                <DataTemplate DataType="{x:Type models:DriverProfile}">
                    
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <ui:SymbolIcon Symbol="Person24" 
                                           FontSize="25"               
                                           Margin="5,0,15,0"
                                           Foreground="DeepSkyBlue"/>
                            <StackPanel Grid.Column="1">
                                <ui:TextBlock Text="{Binding LicensePlate}" 
                                              FontWeight="Bold" 
                                              FontSize="16"/>
                            <ui:TextBlock Text="{Binding FullName}" 
                                       Foreground="Gray"/>
                            </StackPanel>

                    </Grid>
                    
                </DataTemplate>
            </ui:ListView.ItemTemplate>
        </ui:ListView>
        <ui:Button Content="{Binding ViewModel.Count}"
                   Grid.Row="1"
                   Opacity="0.8"
                   Width="60"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Right"
                   Appearance="Primary"
                   Margin="0,0,20,20"/>

    </Grid>
</Page>
