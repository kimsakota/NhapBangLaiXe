<Page x:Class="ToolVip.Views.Pages.ImportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:local="clr-namespace:ToolVip.Views.Pages"
      xmlns:help="clr-namespace:ToolVip.Helpers"
      Title="ImportPage"
      ScrollViewer.CanContentScroll="False"
      d:DataContext="{d:DesignInstance local:ImportPage, IsDesignTimeCreatable=False}"
      mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- === PHẦN 1: ĐĂNG NHẬP API === -->
        <ui:Card Grid.Row="0" Margin="10" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Form đăng nhập (Ẩn khi đã login) -->
                <StackPanel Orientation="Horizontal" 
                            Visibility="{Binding ViewModel.IsLoggedIn, Converter={x:Static help:BooleanToCollapsedConverter.Instance}}">
                    <ui:TextBox PlaceholderText="Username" 
                                Text="{Binding ViewModel.Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                IsReadOnly="True"
                                Width="120" Margin="0,0,5,0"/>

                    <ui:PasswordBox PlaceholderText="Password" 
                                    IsReadOnly="True"
                                    Password="{Binding ViewModel.Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    ClearButtonEnabled="False"
                                    Width="120" Margin="0,0,10,0"/>

                    <!-- [SỬA] Thêm Symbol= cho Icon -->
                    <ui:Button Command="{Binding ViewModel.LoginCommand}" 
                               Content="Đăng Nhập" 
                               Icon="{ui:SymbolIcon Symbol=Key24}"
                               Appearance="Primary"/>
                </StackPanel>

                <!-- Trạng thái đã đăng nhập -->
                <Grid Visibility="{Binding ViewModel.IsLoggedIn, Converter={x:Static help:BooleanToVisibilityConverter.Instance}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <ui:SymbolIcon Symbol="CheckmarkCircle24" Foreground="Green" Margin="0,0,10,0"/>
                    <TextBlock Text="Đã kết nối tới Sever" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="Green"/>

                    <!-- [SỬA] Thêm Symbol= cho Icon -->
                    <!-- Các nút chức năng API -->
                    <ui:Button Command="{Binding ViewModel.GetDataFromApiCommand}" 
                               Content="Lấy hồ sơ" 
                               Grid.Column="1"
                               Appearance="Primary" 
                               Icon="{ui:SymbolIcon Symbol=ArrowDownload24}"
                               Margin="20,0,0,0"/>

                    <ComboBox ItemsSource="{Binding ViewModel.LimitOptions}"
                              SelectedItem="{Binding ViewModel.SelectedLimit, Mode=TwoWay}"
                              ToolTip="Số lượng hồ sơ cần lấy"
                              Grid.Column="2"
                              Foreground="Green"
                              FontWeight="Bold"
                              Margin="20,0,10,0"/>
                </Grid>

                <!-- Loading Indicator -->
                <ui:ProgressRing Grid.Column="1" IsIndeterminate="True" 
                                 Visibility="{Binding ViewModel.IsBusy, Converter={x:Static help:BooleanToVisibilityConverter.Instance}}" 
                                 Width="25" Height="25"/>
            </Grid>
        </ui:Card>

        <!-- === PHẦN 2: CÔNG CỤ CŨ === -->
        <Border Grid.Row="1" 
                Margin="10,0,20,10">
            <!-->
                <ui:Button Command="{Binding ViewModel.PasteFromClipboardCommand}" 
                       Content="Dán từ Excel" 
                       IsEnabled="False"
                       Icon="{ui:SymbolIcon Symbol=ClipboardPaste24}"
                       Appearance="Secondary" Margin="0,0,10,0"/>

                <ui:Button Command="{Binding ViewModel.ClearDataCommand}" 
                       Content="Xóa danh sách" 
                       IsEnabled="False"
                       Icon="{ui:SymbolIcon Symbol=Delete24}"
                       Appearance="Danger" Margin="0,0,10,0"/>

                <TextBlock VerticalAlignment="Center" 
                       Foreground="Gray" FontStyle="Italic"/>
            </!-->
            <ui:Button Grid.Row="1" 
                       Command="{Binding ViewModel.SaveToDatabaseCommand}" 
                       Content="Lưu tất cả vào CSDL Local" 
                       Appearance="Success" 
                       Icon="{ui:SymbolIcon Symbol=Save24}"
                       HorizontalAlignment="Right" 
                       Height="36"/>
        </Border>

        <!-- === PHẦN 3: BẢNG DỮ LIỆU === -->
        <DataGrid Grid.Row="2" 
                  ItemsSource="{Binding ViewModel.ImportedProfiles}" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  HeadersVisibility="Column"
                  Margin="20,0,20,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Họ tên" Binding="{Binding FullName}" Width="150"/>
                <DataGridTextColumn Header="CCCD" Binding="{Binding Cccd}" Width="110"/>
                <DataGridTextColumn Header="Ngày cấp" Binding="{Binding IssueDate}" Width="100"/>
                <DataGridTextColumn Header="SĐT" Binding="{Binding PhoneNumber}" Width="100"/>
                <DataGridTextColumn Header="Địa chỉ TT" Binding="{Binding Address}" Width="250"/>
                <DataGridTextColumn Header="Số nhà/Xã" Binding="{Binding WardCommune}" Width="250"/>
                <DataGridTextColumn Header="Biển số" Binding="{Binding LicensePlate}" Width="90"/>
                <DataGridTextColumn Header="Số máy" Binding="{Binding EngineNumber}" Width="180"/>
                <DataGridTextColumn Header="Số khung" Binding="{Binding ChassisNumber}" Width="180"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>