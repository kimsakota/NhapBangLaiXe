<Page x:Class="ToolVip.Views.Pages.ImportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:local="clr-namespace:ToolVip.Views.Pages"
      Title="ImportPage"
      ScrollViewer.CanContentScroll="False"
      d:DataContext="{d:DesignInstance local:ImportPage, IsDesignTimeCreatable=False}"
      mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="20">
            <ui:Button Command="{Binding ViewModel.PasteFromClipboardCommand}" 
                       Content="Dán từ Excel" 
                       Icon="{ui:SymbolIcon ClipboardPaste24}"
                       Appearance="Primary" Margin="0,0,10,0"/>

            <ui:Button Command="{Binding ViewModel.ClearDataCommand}" 
                       Content="Xóa danh sách" 
                       Icon="{ui:SymbolIcon Delete24}"
                       Appearance="Danger" Margin="0,0,10,0"/>

            <TextBlock VerticalAlignment="Center" 
                       Text="Copy toàn bộ bảng (từ cột 1-11) trừ tiêu đề rồi bấm Dán."
                       Foreground="Gray" FontStyle="Italic"/>
        </StackPanel>

        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding ViewModel.ImportedProfiles}" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  HeadersVisibility="Column"
                  Margin="20,0,20,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Họ tên" Binding="{Binding FullName}" Width="150"/>

                <DataGridTextColumn Header="CCCD" Binding="{Binding Cccd}" Width="110"/>

                <DataGridTextColumn Header="Ngày cấp" Binding="{Binding IssueDate}" Width="100"/>

                <DataGridTextColumn Header="Địa chỉ TT" Binding="{Binding Address}" Width="150"/>

                <DataGridTextColumn Header="Số nhà/Xã" Binding="{Binding WardCommune}" Width="120"/>

                <DataGridTextColumn Header="Biển số" Binding="{Binding LicensePlate}" Width="90"/>

                <DataGridTextColumn Header="Số máy" Binding="{Binding EngineNumber}" Width="110"/>

                <DataGridTextColumn Header="Số khung" Binding="{Binding ChassisNumber}" Width="110"/>

                <DataGridTextColumn Header="SĐT" Binding="{Binding PhoneNumber}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <ui:Button Grid.Row="2" 
                   Command="{Binding ViewModel.SaveToDatabaseCommand}" 
                   Content="Lưu tất cả vào CSDL" 
                   Appearance="Success" 
                   Icon="{ui:SymbolIcon Save24}"
                   HorizontalAlignment="Right" 
                   Margin="20"/>
    </Grid>
</Page>