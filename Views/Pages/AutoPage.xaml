<Page x:Class="ToolVip.Views.Pages.AutoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:local="clr-namespace:ToolVip.Views.Pages"
      xmlns:models="clr-namespace:ToolVip.Models"
      xmlns:help="clr-namespace:ToolVip.Helpers"
      Title="AutoPage"
      d:DataContext="{d:DesignInstance local:AutoPage, IsDesignTimeCreatable=False}"
      d:DesignHeight="700" d:DesignWidth="900"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      ScrollViewer.CanContentScroll="False"
      mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- === CỘT TRÁI: DANH SÁCH VÙNG QUÉT === -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5"/>
                <!-- GridSplitter giả -->
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ui:TextBlock Text="Vùng Quét OCR" 
                  FontTypography="Subtitle" 
                  VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <ui:Button Command="{Binding ViewModel.AddZoneCommand}"
                               Icon="{ui:SymbolIcon Add24}"
                               Appearance="Success"
                               ToolTip="Thêm cấu hình vùng mới"
                               Margin="0,0,5,0"/>
                </StackPanel>
            </Grid>

            <!-- List Vùng -->
            <ui:ListView Grid.Row="2"
                         ItemsSource="{Binding ViewModel.ScanZones}" 
                         SelectedItem="{Binding ViewModel.SelectedZone}" 
                         SelectionMode="Single"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ui:ListView.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:ScanZone}">
                        <Grid >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <!-- Icon -->
                            <ui:SymbolIcon Symbol="ScanObject24" 
                                           Margin="0,0,10,0" 
                                           FontSize="32"
                                           Foreground="CornflowerBlue" 
                                           VerticalAlignment="Center"/>

                            <!-- Nội dung -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <!-- Chỉ giữ lại Từ khóa, xóa dòng Tọa độ -->
                                <TextBlock Text="{Binding Keyword}" 
                                           FontWeight="SemiBold"
                                           FontSize="17"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ui:ListView.ItemTemplate>
            </ui:ListView>

            <!-- Log MỚI -->
            <GroupBox Grid.Row="4" Header="Nhật Ký (Log)" Margin="0,10,0,0">
                <ui:ListView ItemsSource="{Binding ViewModel.Logs}" 
                             ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ui:ListView.ItemTemplate>
                        <DataTemplate DataType="{x:Type models:LogEntry}">
                            <TextBlock Text="{Binding FullMessage}" 
                                       Foreground="{Binding Color}" 
                                       FontFamily="Consolas" 
                                       TextWrapping="Wrap"/>
                        </DataTemplate>
                    </ui:ListView.ItemTemplate>
                </ui:ListView>
            </GroupBox>
        </Grid>

        <!-- === DÒNG DƯỚI: ĐIỀU KHIỂN MỚI === -->
        <Grid Grid.Row="1" Grid.ColumnSpan="3" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Nút Test Tất Cả -->
            <ui:Button Command="{Binding ViewModel.TestAllZonesCommand}" 
                       Icon="{ui:SymbolIcon PlayCircle24}" 
                       Content="Kiểm Tra Tất Cả Vùng (Test)"
                       Appearance="Primary"
                       IsEnabled="{Binding ViewModel.IsTesting, Converter={x:Static help:BooleanToConverter.Instance}}"
                       HorizontalAlignment="Left"
                       Height="40" FontSize="16" Padding="20,0"/>

            <!-- Nút Xóa Log -->
            <ui:Button Grid.Column="1" 
                       Icon="{ui:SymbolIcon Eraser24}" 
                       Content="Xóa Log"
                       Command="{Binding ViewModel.ClearLogCommand}"/>
        </Grid>
    </Grid>
</Page>