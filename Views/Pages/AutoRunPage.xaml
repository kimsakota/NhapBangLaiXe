<Page x:Class="ToolVip.Views.Pages.AutoRunPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:local="clr-namespace:ToolVip.Views.Pages"
      xmlns:viewmodels="clr-namespace:ToolVip.ViewModels.Pages"
      xmlns:helpers="clr-namespace:ToolVip.Helpers"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AutoRunPage">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Phần điều khiển phía trên -->
        <ui:Card Padding="20">
            <StackPanel>
                <ui:TextBlock Text="Trạng thái Auto" FontTypography="Subtitle"/>

                <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                    <!-- NÚT CHẠY/DỪNG THÔNG MINH (Sử dụng Style Trigger để đổi màu/icon) -->
                    <ui:Button Command="{Binding ToggleRunAsyncCommand}"
                               Height="40" Width="160"
                               Margin="0,0,15,0">
                        <ui:Button.Style>
                            <Style TargetType="ui:Button" BasedOn="{StaticResource {x:Type ui:Button}}">
                                <!-- Mặc định: Màu xanh, Icon Play, Chữ Chạy -->
                                <Setter Property="Appearance" Value="Primary"/>
                                <Setter Property="Icon" Value="{ui:SymbolIcon Play24}"/>
                                <Setter Property="Content" Value="Chạy Auto"/>

                                <Style.Triggers>
                                    <!-- Khi đang chạy: Màu đỏ, Icon Stop, Chữ Dừng -->
                                    <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                        <Setter Property="Appearance" Value="Danger"/>
                                        <Setter Property="Icon" Value="{ui:SymbolIcon Stop24}"/>
                                        <Setter Property="Content" Value="Dừng Auto"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ui:Button.Style>
                    </ui:Button>

                    <!-- Vòng xoay chờ (Chỉ hiện khi đang chạy) -->
                    <!-- Dùng lại BooleanToVisibilityConverter có sẵn trong dự án của bạn -->
                    <ui:ProgressRing IsIndeterminate="True" 
                                     Visibility="{Binding IsRunning, Converter={x:Static helpers:BooleanToVisibilityConverter.Instance}}"/>

                    <TextBlock Text="Đang giám sát màn hình..." 
                               VerticalAlignment="Center" Margin="10,0,0,0" Foreground="Green"
                               Visibility="{Binding IsRunning, Converter={x:Static helpers:BooleanToVisibilityConverter.Instance}}"/>
                </StackPanel>
            </StackPanel>
        </ui:Card>

        <!-- Khu vực hiển thị Log -->
        <GroupBox Header="Nhật ký hoạt động" Grid.Row="1" Margin="0,20,0,0">
            <ui:TextBox Text="{Binding LogText, Mode=OneWay}"
                        IsReadOnly="True"
                        VerticalAlignment="Stretch"
                        VerticalContentAlignment="Top"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        BorderThickness="0"/>
        </GroupBox>

        <!-- Thanh trạng thái Debug phía dưới -->
        <Border Grid.Row="2" Margin="0,10,0,0" 
                Background="{DynamicResource ControlFillColorDefaultBrush}" 
                Padding="10" CornerRadius="4">
            <StackPanel Orientation="Horizontal">
                <ui:SymbolIcon Symbol="Eye24" Margin="0,0,10,0"/>
                <TextBlock Text="OCR đọc được: " FontWeight="Bold"/>
                <TextBlock Text="{Binding DetectedText}" 
                           Foreground="Gray" 
                           TextTrimming="CharacterEllipsis" 
                           MaxWidth="500"
                           Margin="5,0,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>